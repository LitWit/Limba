<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/deutschesTextfeld"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/addToVokabellisteButton"
        android:layout_alignRight="@+id/addToVokabellisteButton"
        android:layout_below="@+id/persischesTextfeld"
        android:layout_marginTop="37dp"
        android:ems="10" />

    <Button
        android:id="@+id/addToVokabellisteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/trainierenButton"
        android:layout_marginLeft="15dp"
        android:height="60dp"
        android:text="Zur Vokabelliste hinzufÃ¼gen"
        android:width="160dp" />

    <Button
        android:id="@+id/trainierenButton"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/deutschesTextfeld"
        android:layout_marginRight="18dp"
        android:layout_marginTop="36dp"
        android:text="Trainieren" />

    <Button
        android:id="@+id/bildButton"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_alignLeft="@+id/persischesTextfeld"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/persischesTextfeld"
        android:layout_marginTop="26dp"
        android:text="Bild" />

    <EditText
        android:id="@+id/persischesTextfeld"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/deutschesTextfeld"
        android:layout_alignRight="@+id/deutschesTextfeld"
        android:layout_centerVertical="true"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/profilBildButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/bildButton"
        android:layout_alignRight="@+id/trainierenButton"
        android:layout_alignTop="@+id/bildButton"
        android:text="ProfilBild" />

    <Button
        android:id="@+id/button1"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/persischesTextfeld"
        android:layout_alignLeft="@+id/profilBildButton"
        android:layout_alignTop="@+id/persischesTextfeld"
        android:text="M" />

    <Button
        android:id="@+id/button2"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button1"
        android:layout_alignRight="@+id/profilBildButton"
        android:layout_alignTop="@+id/button1"
        android:text="L" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/deutschesTextfeld"
        android:layout_alignLeft="@+id/button1"
        android:layout_alignRight="@+id/button1"
        android:layout_alignTop="@+id/deutschesTextfeld"
        android:text="M" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button3"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignRight="@+id/button2"
        android:layout_alignTop="@+id/button3"
        android:text="L" />

</RelativeLayout>
